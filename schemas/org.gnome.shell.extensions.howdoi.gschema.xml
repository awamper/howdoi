<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">

  <schema path="/org/gnome/shell/extensions/howdoi/" id="org.gnome.shell.extensions.howdoi">

    <key type="as" name="show-howdoi">
      <default><![CDATA[['F4']]]></default>
    </key>

    <key type="b" name="enable-animations">
        <default>true</default>
    </key>

    <key type="i" name="dialog-width-percents">
        <default>75</default>
    </key>

    <key type="i" name="dialog-height-percents">
        <default>70</default>
    </key>

    <key type="s" name="google-suggestions-url">
        <default><![CDATA['https://suggestqueries.google.com/complete/search?client=chrome&q=%s']]></default>
    </key>

    <key type="i" name="max-suggestions">
        <default>5</default>
    </key>

    <key type="i" name="suggestions-timeout">
        <default>100</default>
    </key>

    <key type="i" name="suggestions-cache-limit">
        <default>500</default>
    </key>

    <key type="b" name="enable-suggestions">
        <default>true</default>
    </key>

    <key type="b" name="enable-calculator">
        <default>true</default>
    </key>

    <key type="b" name="hide-page-indicators">
        <default>false</default>
    </key>

    <key type="b" name="use-google-search">
        <default>true</default>
    </key>

    <key type="s" name="default-site">
        <default>'stackoverflow.com'</default>
    </key>

    <key type="i" name="max-answers">
        <default>5</default>
    </key>

    <key type="as" name="history">
        <default>[]</default>
    </key>

    <key type="i" name="history-limit">
        <default>100</default>
    </key>

    <key type="b" name="question-title">
        <default>true</default>
    </key>

  </schema>
</schemalist>
